{
  "name": "sentry-global-search",
  "private": true,
  "description": "Dev sandbox for Algolia powered search across Sentry static sites.",
  "version": "0.0.7",
  "author": "Sentry",
  "dependencies": {
    "algoliasearch": "^4.3.1",
    "htmlparser2": "^4.1.0",
    "title-case": "^3.0.2"
  },
  "main": "./index.js",
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "babel-loader": "^8.1.0",
    "html-loader": "^1.2.1",
    "html-webpack-plugin": "^4.3.0",
    "jest": "^26.4.1",
    "prettier": "2.0.5",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "remark": "^12.0.1",
    "remark-html": "^12.0.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "keywords": [
    "gatsby"
  ],
  "license": "UNLICENSED",
  "scripts": {
    "start": "webpack-dev-server --open --mode development --config ./config/webpack.config.js",
    "build": "webpack --mode production --config ./config/webpack.config.js",
    "test": "jest",
    "release": "yarn test && yarn version"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/getsentry/sentry-global-search"
  },
  "bugs": {
    "url": "https://github.com/getsentry/sentry-global-search"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid"
